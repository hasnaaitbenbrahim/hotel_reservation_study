generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Client {
  id        Int           @id @default(autoincrement())
  nom       String
  prenom    String
  email     String
  telephone String
  reservations Reservation[]
}

model Chambre {
  id         Int           @id @default(autoincrement())
  type       String
  prix       Decimal
  disponible Boolean
  reservations Reservation[]
}

model Reservation {
  id          Int      @id @default(autoincrement())
  clientId    Int
  chambreId   Int
  dateDebut   DateTime
  dateFin     DateTime
  preferences String
  client      Client   @relation(fields: [clientId], references: [id])
  chambre     Chambre  @relation(fields: [chambreId], references: [id])
}
