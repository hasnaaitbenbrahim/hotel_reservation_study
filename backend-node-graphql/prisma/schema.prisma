generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Client {
  id        Int           @id @default(autoincrement())
  nom       String
  prenom    String
  email     String
  telephone String
  reservations Reservation[]

  @@map("client")
}

model Chambre {
  id         Int           @id @default(autoincrement())
  type       String
  prix       Decimal
  disponible Boolean
  reservations Reservation[]

  @@map("chambre")
}

model Reservation {
  id          Int      @id @default(autoincrement())
  clientId    Int      @map("client_id")
  chambreId   Int      @map("chambre_id")
  dateDebut   DateTime @map("date_debut")
  dateFin     DateTime @map("date_fin")
  preferences String
  client      Client   @relation(fields: [clientId], references: [id])
  chambre     Chambre  @relation(fields: [chambreId], references: [id])

  @@map("reservation")
}
